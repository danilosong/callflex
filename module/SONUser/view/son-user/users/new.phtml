<script>
    $(function () {
        $('#user').submit(function(e) {
            e.preventDefault();
            const nome = $('input[name="nome"]').val();
            const email = $('input[name="email"]').val();
            $.ajax({
                url: "<?php echo $this->url($route, array('controller' => 'users', 'action' => 'new'), [], FALSE, FALSE); ?>",
